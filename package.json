{
  "name": "sourcemapify",
  "version": "1.0.4",
  "description": "Source Map plugin for Browserify",
  "keywords": [
    "browserify",
    "browserify-plugin",
    "sourcemap",
    "source-map",
    "source map"
  ],
  "author": {
    "name": "James Messinger",
    "url": "http://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/sourcemapify",
  "main": "lib/index.js",
  "scripts": {
    "lint": "jshint . --verbose && jscs . --verbose",
    "build": "npm run lint",
    "upgrade": "ncu --upgradeAll && npm update",
    "bump": "bump --prompt --tag --push --all",
    "test": "npm run test-api",
    "test-cli": "browserify test/lib/index.js -p [ sourcemapify --root \"../../\" ] --debug -o test/www/js/bundle.js",
    "test-api": "node test/api.js",
    "test-default": "browserify test/lib/index.js --debug -o test/www/js/bundle.js",
    "release": "npm run upgrade && npm run build && npm run bump && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/sourcemapify.git"
  },
  "devDependencies": {
    "jscs": "^2.0.0",
    "jshint": "^2.8.0",
    "npm-check-updates": "^2.2.0",
    "version-bump-prompt": "^1.5.0",
    "browserify": "^11.0.1"
  },
  "dependencies": {
    "through": "^2.3.8"
  }
}